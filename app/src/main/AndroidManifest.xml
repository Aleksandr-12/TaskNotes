<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.notepad.Notepad">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".NoteApplication"
        android:allowBackup="true"
        android:exported="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notepad">
        <activity
            android:name=".Activity.ActivityNote"
            android:label="@string/title_activity_note"
            android:theme="@style/Theme.Notepad.NoActionBar" />
        <activity
            android:name=".Activity.ActivityAddTask"
            android:label="@string/add_task"
            android:theme="@style/Theme.Notepad.NoActionBar" />
        <activity
            android:name=".Activity.ActivityRegister"
            android:label="@string/registration"
            android:theme="@style/Theme.Notepad.NoActionBar" />
        <activity
            android:name=".Activity.ActivityAuthorization"
            android:label="@string/authorization"
            android:theme="@style/Theme.Notepad.NoActionBar" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>